<div class="panel panel-info" id="form_category">
  <div class="panel-heading">
    <div class="panel-title">Edit category</div>
  </div>
  <div class="panel-body">
    <%= form_for category, remote: true, html: {class: "form-horizontal"} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group" style="padding-left: 12px">
        <%= f.label :name, "Category name" %>
        <%= f.text_field :name, class: "form-control", style: "width: 80%",
          placeholder: "Category name" %>
      </div>
      <div class="form-group" style="padding-left: 12px">
        <%= f.submit "Xác nhận", class: "btn btn-info" do %>
          <i class="icon-hand-right"></i>
        <% end %>
        <button type="button" onclick="cancel_edit_category()" class="btn btn-warning" style="padding-left: 12px; padding-right: 12px; margin-left: 2%">Hủy bỏ</button>
      </div>
    <% end %>
  </div>
</div>

<script>
  function cancel_edit_category() {
    $("#edit_category_<%= category.id %>").html('<%= link_to category, style: "text-decoration: none" do %><span class="glyphicon glyphicon-record" style="margin-right: 6px"></span><%= category.name %><% end %><%= link_to category,method: :delete, data: {confirm: "Are you sure?", remote: true}, class: "delete" do %><i class="far fa-trash-alt" style="font-size: 18px; color: #337ab7;float: right; margin-left: 8px"></i><% end %><%= link_to edit_category_path(category), remote: true do %><i class="far fa-edit" style="font-size: 18px; color: #337ab7;float: right"></i><% end %>');
  }
</script>
