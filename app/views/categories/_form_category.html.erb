<div class="panel panel-info" id="form_category">
  <div class="panel-heading">
    <div class="panel-title">Add category</div>
  </div>
  <div class="panel-body">
    <%= form_for category, remote: true, html: {class: "form-horizontal"} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group" style="padding-left: 12px">
        <%= f.label :name, "Category name" %>
        <%= f.text_field :name, class: "form-control", style: "width: 80%",
          placeholder: "Category name" %>
      </div>
      <div class="form-group" style="padding-left: 12px">
        <%= f.submit "Xác nhận", class: "btn btn-info" do %>
          <i class="icon-hand-right"></i>
        <% end %>
        <button type="button" onclick="cancel_add_category()" class="btn btn-warning" style="padding-left: 12px; padding-right: 12px; margin-left: 2%">Hủy bỏ</button>
      </div>
    <% end %>
  </div>
</div>

<script>
  function cancel_add_category() {
    $("#form_category").remove();
    $("#new_category a").show();
  }
</script>
