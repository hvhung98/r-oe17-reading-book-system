<div class="animate col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
  style="padding-top: 50px">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Sửa sách</div>
    </div>
    <div class="panel-body">
      <%= form_for book, html: {class: "form-horizontal"} do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :name, "Tên sách" %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= f.select(:category_id, @categories, class: "form-control") %><br><br>
        <%= collection_select(:authors, :id, Author.all, :id, :name, {},
         {:multiple => true}) %><br><br>
        <%= f.label :description, "Mô tả" %>
        <%= f.text_field :description, class: "form-control" %><br>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control" %><br>
        <%= f.submit "Xác nhận", class: "btn btn-primary" %>
        <button type="button" class="btn btn-warning" style="padding-left: 15px;
          padding-right: 15px; margin-left: 2%" onclick="cancel_edit_book()">Hủy bỏ</button>
      <% end %>
    </div>
  </div>
</div>
<script>
  function cancel_edit_book() {
    $(".edit_book").html('').hide();
  }
</script>
