<div class="animate col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
  style="padding-top: 50px">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Edit user</div>
    </div>
    <div class="panel-body">
      <%= form_for ["admin", user], remote: true, html: {class: "form-horizontal"} do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :name, "User name" %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, class: "form-control" %><br>
        <%= f.submit "Xác nhận", class: "btn btn-primary" %>
        <button type="button" class="btn btn-warning" onclick="cancel_edit_user()"
          style="margin-left: 2%">Hủy bỏ</button>
      <% end %>
    </div>
  </div>
</div>

<script>
  function cancel_edit_user() {
    $(".edit_user").html('').hide();
  }
</script>
