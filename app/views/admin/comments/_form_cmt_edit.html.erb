<div class="animate col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
  style="padding-top: 50px">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Edit comment</div>
    </div>
    <div class="panel-body">
      <%= form_for ["admin", comment], remote: true, html: {class: "form-horizontal"} do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :user_id, "Người comment" %><br>
        <%= f.select(:user_id, users, class: "form-control") %><br><br>
        <%= f.label :book_id, "Tên sách" %><br>
        <%= f.select(:book_id, books, class: "form-control") %><br><br>
        <%= f.label :content, "Nội dung" %>
        <%= f.text_field :content, class: "form-control" %><br>
        <%= f.submit "Xác nhận", class: "btn btn-primary" %>
        <button type="button" class="btn btn-warning" style="padding-left: 15px;
          padding-right: 15px; margin-left: 2%" onclick="cancel_edit_cmt()">Hủy bỏ</button>
      <% end %>
    </div>
  </div>
</div>
<script>
  function cancel_edit_cmt() {
    $(".edit_cmt").html('').hide();
  }
</script>
