<div class="media">
  <div class="media-left">
    <%= image_tag("pf_image.jpg", style: "width: 50px; height: 50px",
      alt: "Image User") %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to comment.user.name, comment.user %></h4>
    <p><%= comment.content %></p>
    <small class="text-info"><%= time_ago_in_words(comment.created_at) %> ago</small>
  </div>
</div><br>
