  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3
    col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title"><%= t ".sign_in" %></div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px">
          <%= link_to t(".forgot_pw"), "#" %>
        </div>
      </div>
      <div style="padding-top:30px" class="panel-body">
        <%= form_for :session, url: login_path, html: {class: "form-horizontal"} do |f| %>
          <div style="margin-bottom:25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.text_field :email, class: "form-control", placeholder:
              t(".pl_h_e") %>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, class: "form-control", placeholder:
              t(".pl_h_p") %>
          </div>
          <div class="input-group">
            <div class="checkbox">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t ".remember_me" %></span>
              <% end %>
            </div>
          </div>
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%= f.submit t(".login"), class: "btn btn-success" %>
              <%= link_to "/auth/github", class: "btn btn-danger" do %>
                <i class="fab fa-google" style="font-size:16px; margin-right:5px"></i>
                <%= t ".login_gg" %>
              <% end %>
              <%= link_to t(".anonymous_user"), home_path, class: "btn btn-default",
                style: "float: right" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top:1px solid #888; padding-top:15px; font-size:85%">
                <%= t ".new_account" %>
                <%= link_to t(".sign_up"), signup_path %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
