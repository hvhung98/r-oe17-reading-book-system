
  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3
    col-sm-8 col-sm-offset-2 margin_top_50">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title"><%= t ".sign_in" %></div>
        <div id="bForgot_pw">
          <%= link_to t(".forgot_pw"), "#" %>
        </div>
      </div>
      <div  class="panel-body padding_top_30">
        <%= form_for :session, url: login_path, html: {class: "form-horizontal"} do |f| %>
          <div class="margin_bottom_25 input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.text_field :email, class: "form-control", placeholder:
              t(".pl_h_e") %>
          </div>
          <div class="input-group margin_bottom_25">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, class: "form-control", placeholder:
              t(".pl_h_p") %>
          </div>
          <div class="input-group">
            <div class="checkbox">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t ".remember_me" %></span>
              <% end %>
            </div>
          </div>
          <div class="form-group margin_top_10">
            <div class="col-sm-12 controls">
              <%= f.submit t(".login"), class: "btn btn-success" %>
              <%= link_to "/auth/github", class: "btn btn-danger" do %>
                <i class="fab fa-google" id="icon_gg"></i>
                <%= t ".login_gg" %>
              <% end %>
              <%= link_to t(".anonymous_user"), home_path, class: "btn btn-default float_right"%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 control">
              <div id="bSignup">
                <%= t ".new_account" %>
                <%= link_to t(".sign_up"), signup_path %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function(){
      $("#header").hide();
    })
  </script>
