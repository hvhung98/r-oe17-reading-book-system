<div id="signupbox" class="mainbox
  col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Thêm sách</div>
    </div>
    <div class="panel-body">
      <%= form_for @book, html: {class: "form-horizontal"} do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :name, "Tên sách" %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= select_tag(:category_id, options_for_select(@categories), :prompt =>
          "Chọn thể loại sách", class: "form-control") %><br>
        <%= collection_select(:authors, :id, Author.all, :id, :name, {},
         {:multiple => true}) %><br><br>
        <%= f.label :description, "Mô tả" %>
        <%= f.text_field :description, class: "form-control" %><br>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control" %><br>
        <%= f.fields_for :chapters do |chapter| %>
          <%= chapter.label :name, "Tên chapter" %>
          <%= chapter.text_field :name, class: "form-control" %><br>
          <%= chapter.label :content, "Nội dung" %>
          <%= chapter.text_area :content, rows: 5, class: "form-control" %>
        <% end %><br>
        <%= f.submit "Xác nhận", class: "btn btn-primary" %>
        <%= link_to "Huỷ bỏ", home_path, class: "btn btn-warning", style: "margin-left: 3%; padding-left: 15px; padding-right: 15px" %>
      <% end %>
    </div>
  </div>
</div>
