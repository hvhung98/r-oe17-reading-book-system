$("#edit_category_<%= @category.id %>").html('<%= link_to @category, style:"text-decoration: none" do %><span class="glyphicon glyphicon-record" style="margin-right: 6px"></span><%= @category.name %><% end %><% if (current_user.present? && current_user.role_id == 3) %><%= link_to @category, method: :delete, data: {confirm: "Are you sure?", remote: true}, class: "delete" do %><i class="far fa-trash-alt" style="font-size: 18px; color: #337ab7; float: right; margin-left: 8px"></i><% end %><%= link_to edit_category_path(@category), remote: true do %><i class="far fa-edit" style="font-size: 18px; color: #337ab7; float: right"></i><% end %><% end %>');
